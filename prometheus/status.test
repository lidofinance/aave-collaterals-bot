---
rule_files:
  - "status.rule"
evaluation_interval: 5m
tests:
  # ProcessRestarted
  - interval: 5m
    input_series:
      - series: process_start_time_seconds{job=~"mainnet|arbitrum|polygon"}
        values: 0 1 2 3 4 5
    alert_rule_test:
      # event should fire
      - eval_time: 15m
        alertname: ProcessRestarted
        exp_alerts:
          - exp_labels:
              severity: critical
              job: mainnet, arbitrum, polygon
            exp_annotations:
              summary: Too much AAVE {{ .job }} bot restarts
              description: >-
                The AAVE {{ .job }} bot has been restarted for 3 times
                for the last 15 minutes

  # StaleBotReport
  - interval: 5m
    input_series:
      - series: aave_bot_processing_finished_seconds{job=~"mainnet|arbitrum|polygon"}
        values: _x8 900+0x37
    alert_rule_test:
      - eval_time: 35m
        alertname: StaleBotReportOnLaunch
        exp_alerts:
          - exp_labels:
              severity: high
            exp_annotations:
              summary: Stale AAVE {{ .job }} bot report detected
              description: >-
                No report has been received in the last 30
                minutes since the AAVE {{ .job }} bot was launched

      - eval_time: 3h40m
        alertname: StaleBotReport
        exp_alerts:
          - exp_labels:
              severity: high
            exp_annotations:
              summary: Stale AAVE {{ .job }} bot report detected
              description: Last report has been received more than 3 hours ago on AAVE {{ .job }} bot

